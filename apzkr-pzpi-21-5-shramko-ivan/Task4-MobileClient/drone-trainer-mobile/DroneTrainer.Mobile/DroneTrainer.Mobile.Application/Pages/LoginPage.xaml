<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DroneTrainer.Mobile.Application.Pages.LoginPage"
             xmlns:strings="clr-namespace:DroneTrainer.Mobile.Application.Resources.Strings"
             Title="LoginPage">
    <VerticalStackLayout>
        <Entry Placeholder="{Binding LocalizationResourseManager[LoginPasswordPlaceholder]}" TextChanged="OnUserNameEntered"/>
        <Entry Placeholder="{Binding LocalizationResourseManager[LoginUserNamePlaceholder]}"
               IsPassword="True"
               TextChanged="OnPasswordEntered"/>
        <Button Text="{Binding LocalizationResourseManager[LoginSignInButton]}" Clicked="OnLogin"/>
    </VerticalStackLayout>
</ContentPage>